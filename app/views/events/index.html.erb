<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Title</th>
      <th>Photo</th>
      <th>Description</th>
      <th>Hour</th>
      <th>Link</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.city %></td>
        <td><%= event.title %></td>
        <td><%= image_tag(event.photo_url, :width => 600) if event.photo.present? %></td>
        <td><%= event.description %></td>
        <td><%= event.hour %></td>
        <td><%= event.link %></td>
        <td><%= event.category %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

